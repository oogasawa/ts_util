
{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist/**/*",
		"node_modules",
		"test/**/*"
	],
	"compilerOptions": {
		"target": "es6",
		"module": "commonJS",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"noImplicitAny": true,
		"removeComments": false,
		"sourceMap": true,
		"lib":[
			"esnext",
			"es2020.string"
		],
		"types": [
			"jest",
			"node"
		]
	},
	"moduleResolution": "node"
}

